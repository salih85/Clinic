<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Patient</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
</head>

<body class="bg-light">
<%- include('navber') %>
    <div class="container mt-5">

        <h2 class="text-primary mb-4">Add New Patient</h2>

    <form method="POST" action="/desk/patients/add">


            <div class="form-group">
                <label>ID</label>
                <input type="text" name="id" class="form-control" required>
            </div>

            <div class="form-group">
                <label>Patient Name</label>
                <input type="text" name="name" class="form-control" required>
            </div>

            <div class="form-group">
                <label>Phone</label>
                <input type="text" name="phone" class="form-control" required>
            </div>

            <div class="form-group">
                <label>Age</label>
                <input type="number" name="age" class="form-control" required>
            </div>

            <div class="form-group">
                <label>Gender</label>
                <select name="gender" class="form-control" required>
                    <option value="" disabled selected>Select Gender</option>
                    <option>Male</option>
                    <option>Female</option>
                    <option>Other</option>
                </select>
            </div>

            <div class="form-group">
                <label>Blood Group</label>
                <input type="text" name="bloodGroup" class="form-control">
            </div>

            <div class="form-group">
                <label>Address</label>
                <textarea name="address" class="form-control" rows="3"></textarea>
            </div>

            <div class="form-group">
                <label>Last Visit</label>
                <input type="text" name="lastVisit" class="form-control">
            </div>

            <button class="btn btn-success btn-block">Add Patient</button>

            <!-- <a href="/dask/patients" class="btn btn-secondary btn-block mt-2">Back</a> -->

        </form>

    </div>

</body>
</html>
